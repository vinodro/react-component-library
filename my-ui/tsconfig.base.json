{
    "compilerOptions": {
      "composite": true,
      "declarationMap": true,
      "isolatedModules": true,
      "forceConsistentCasingInFileNames": true,
      "emitDeclarationOnly": true,
      "target": "ESNext",
      "module": "ESNext",
      "jsx": "react-jsx",
      "declaration": true,
      "declarationDir": "./dist/types",
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
    },
  "exclude": ["node_modules", "**/*.test.ts", "**/*.stories.ts"]
}